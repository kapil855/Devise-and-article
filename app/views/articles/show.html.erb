<p id="notice"><%= notice %></p>
	<%= image_tag @article.image.url, class: "w-25 h-25" %>
<p>
	<strong>Title:</strong>
	<%= @article.title %>
</p>

<p>
	<strong>Body:</strong>
	<%= @article.body %>
</p>

<p>
	<strong>User:</strong>
	<%= @article.user_id %>
</p>
<p>
	<% @article.comments.each do |comment| %>
	<%= comment.title %>
	<%= comment.body %>
	<% end %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
